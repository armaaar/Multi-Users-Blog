
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="ROBOTS" content="NOODP">

<!--   Regular Meta Info - used by search engines and browsers -->

<meta name="description" content="{{ handler.description }}">
<meta name="keywords" content="{{ handler.keywords }}">
<link rel="author" href="http://www.it-tick.com/" />
<link rel="canonical" href="{{ handler.request.url }}" />

<!--  Facebook Meta Info - used by Facebook when someone shares your url -->

<meta property="og:url" content="{{ handler.request.url }}">
<meta property="og:image" content="{{ handler.seo_img }}">
<meta property="og:title" content="{{ handler.title }}">
<meta property="og:site_name" content="{{ helper.variables.site_title }}">
<meta property="og:see_also" content="{{ handler.request.host_url }}">

<!--   Google+ Meta Info - used by Google+ when someone shares your url -->

<meta itemprop="name" content="{{ handler.title }}">
<meta itemprop="description" content="{{ handler.description }}">
<meta itemprop="image" content="{{ handler.seo_img }}">

<!--   Google+ Meta Info - used by Google+ when someone shares your url -->

<meta name="twitter:card" content="summary">
<meta name="twitter:url" content="{{ handler.request.url }}">
<meta name="twitter:title" content="{{ handler.title }}">
<meta name="twitter:description" content="{{ handler.description }}">
<meta name="twitter:image" content="{{ handler.seo_img }}">
