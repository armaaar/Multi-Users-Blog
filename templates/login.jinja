{% extends "./head/head.jinja" %}

{% block content %}

<div class="container">
    <div class="col-xs-12">
        <form method="post">
            <div class="form-group has-feedback
                        {% if feedback %}
                            {% if error['username'] %}
                                has-error
                            {% else %}
                                has-success
                            {% endif %}
                        {% endif %}
                        ">
                <label class="text-capitalize" for="username">Username:</label>
                <input type="text" class="form-control" id="username" name="username" value="{{ username }}">
                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                <span class="form-group-message">
                    {% if feedback and error %}
                        {{ error['username'] }}
                    {% endif %}
                </span>
            </div>
            <div class="form-group has-feedback
                        {% if feedback %}
                            {% if error['password'] %}
                                has-error
                            {% else %}
                                has-success
                            {% endif %}
                        {% endif %}
                        ">
                <label class="text-capitalize" for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password">
                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                <span class="form-group-message">
                    {% if feedback and error %}
                        {{ error['password'] }}
                    {% endif %}
                </span>
            </div>

            <button type="submit" class="btn btn-default text-capitalize">Login</button>
            <p>Not a user? <a href="/login/">Sign up</a> now.</p>
        </form>
    </div>
</div>
{% endblock content %}
