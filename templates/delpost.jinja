{% extends "./head/head.jinja" %}

{% block content %}

<div class="container">
    <div class="col-xs-12">
        <form method="post">
            <p>Are you sure you want to delete the "<a href="/article/{{article.key().id()}}">{{article.title}}</a>" article?</p>
            <button type="submit" class="btn btn-default text-capitalize">Delete</button>
            <a href="/article/{{article.key().id()}}" class="btn btn-default text-capitalize">Cancel</a>
        </form>
    </div>
</div>
{% endblock content %}
